<Window 
    x:Class="yoksdotnet.windows.PaletteCustomizer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ydnwindows="clr-namespace:yoksdotnet.windows" 
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    mc:Ignorable="d"
    Title="PaletteCustomizer" Height="450" Width="800"
>
    <Window.DataContext>
        <ydnwindows:PaletteCustomizerViewModel x:Name="ViewModel" />
    </Window.DataContext>
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3"
            ItemsSource="{Binding Palettes}" 
            SelectedItem="{Binding SelectedPaletteEntry}"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Key}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <WindowsFormsHost Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
            x:Name="PreviewCanvas"
            Initialized="InitPreviewCanvas"
        />

        <DockPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom">
                <Label>Currently editing:</Label>
                <Slider Value="{Binding Hue}" Minimum="0" Maximum="360" />
            </StackPanel>

            <WindowsFormsHost Grid.Row="1" Grid.Column="1"
                x:Name="ColorSelectCanvas"
                Initialized="InitColorSelectCanvas"
            />
        </DockPanel>

    </Grid>
</Window>
